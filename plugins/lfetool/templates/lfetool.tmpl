    #result=`PATH=\`get_path\` ERL_LIBS=\`get_erl_libs\` \
    result=`PATH="\`get_path\`" \
        erl \`construct_pa_ebin_option\` -noshell \
        -eval "$CASE_OPEN \`get_unit_tests\` $CASE_CLOSE"; \
        echo $?`
    status=`echo "$result" | tail -1`
    parsed=`get_parsed "$result"`
    echoe "$parsed"

    return $status
}

