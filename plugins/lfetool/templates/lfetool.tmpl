system_type()
{
    case $(uname -s) in
        AIX)   print AIX ;;
        HP-UX) print HP-UX ;;
        SunOS)
            case $(uname -r) in
                4*) print SUNBSD ;;
                5*) print SOLARIS ;;
            esac
