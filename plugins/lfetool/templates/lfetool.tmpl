# echon -- echo with no trailing newline
echon()
{
    if [ $OS_TYPE = Cygwin ] || [ $OS_TYPE = LINUX ]; then
        echo -n "$*"
    elif [ -x /usr/ucb/echo ] ; then
        /usr/ucb/echo -n "$*"
    elif [ -x /bin/echo ] ; then
        /bin/echo "$*\\c"
    elif [ -x /usr/bin/echo ] ; then
        /usr/bin/echo "$*\\c"
    else # we give up and allow a trailing newline
        echo "$*"
    fi
}

echoe()
{
    case $OS_TYPE in
        LINUX|Cygwin)
            echo -e "$*"
            ;;
        *)
            echo "$*"
            ;;
    esac
}

